# AI Curator Assistant Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# ESSENTIAL API KEYS (Only one required API key!)
# ============================================================================

# Brave Search API (REQUIRED - ~$5/month for 2000 queries)
# Get your API key from: https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here

# ============================================================================
# OPTIONAL API KEYS (For enhanced functionality)
# ============================================================================

# OpenAI API for LLM agents (REQUIRED for agent functionality)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Alternative LLM providers (optional)
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# European cultural data (optional fallback)
EUROPEANA_API_KEY=

# Academic search via SerpAPI (optional)
SERPAPI_KEY=

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL with pgvector
DATABASE_URL=postgresql://curator:curator_password@localhost:5432/curator_db
DB_PASSWORD=curator_password

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Neo4j for graph relationships (optional)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Session Configuration
SESSION_SECRET_KEY=your-secret-key-change-in-production
SESSION_TIMEOUT_MINUTES=60

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================

# LLM Model Selection
LLM_MODEL=gpt-4-turbo-preview  # or gpt-3.5-turbo for lower cost
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# Agent Timeouts (seconds)
AGENT_TIMEOUT_THEME=60
AGENT_TIMEOUT_ARTIST=90
AGENT_TIMEOUT_ARTWORK=120

# Pipeline Settings
MAX_ARTISTS_PER_THEME=50
MAX_ARTWORKS_PER_EXHIBITION=100
MIN_ARTWORKS_REQUIRED=20

# ============================================================================
# EXTERNAL SERVICE CONFIGURATION
# ============================================================================

# Rate Limiting (requests per second)
RATE_LIMIT_WIKIPEDIA=10
RATE_LIMIT_WIKIDATA=5
RATE_LIMIT_GETTY=10
RATE_LIMIT_YALE=5
RATE_LIMIT_BRAVE=1

# Cache TTL (seconds)
CACHE_TTL_VOCABULARY=86400  # 24 hours for Getty vocabularies
CACHE_TTL_ARTWORK=3600      # 1 hour for artwork data
CACHE_TTL_SEARCH=1800       # 30 minutes for search results

# ============================================================================
# MONITORING AND LOGGING
# ============================================================================

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
LOG_FILE_PATH=logs/curator.log

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry Error Tracking (optional)
SENTRY_DSN=

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/Disable Features
ENABLE_BRAVE_SEARCH=true
ENABLE_FALLBACK_SOURCES=false
ENABLE_IIIF_MANIFESTS=true
ENABLE_GRAPH_DATABASE=false
ENABLE_WEBSOCKETS=true

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Debug Mode
DEBUG=false

# Mock External APIs (for testing)
MOCK_EXTERNAL_APIS=false

# Test Database (separate from main database)
TEST_DATABASE_URL=postgresql://curator:curator_password@localhost:5432/curator_test